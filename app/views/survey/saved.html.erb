<%
  session['has_done_survey'] = params["survey_done"] unless params["survey_done"].blank?

  session['survey_status'] = params['survey_status'] unless params['survey_status'].blank?
  session['participants_country'] = params['participants_country'] unless params['participants_country'].blank?
  session['survey_email'] = params['survey_email'] unless params['survey_email'].blank?
%>

<div class="row work-type">
  <div class="col-xs-12">&nbsp;</div>
  <div itemscope itemtype="http://schema.org/CreativeWork" class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Thank you. The information you entered has been saved successfully.
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-12">
            <%
            download_url = ''
            if params['from']=='collection'
                download_url = "/zipfiles/#{params['collection_id']}.zip"
            else
                download_url = "/downloads/#{params['fileset_id']}"
            end
            %>

            <button type="button" class="btn btn-info" onclick="window.open('<%= download_url%>','_blank');parent.location.reload(true);">Download resource</button>

            <button type="button" class="btn btn-info" onclick="parent.location.reload(true);">Close</button>

          </div>

        </div>
      </div>
    </div>
  </div>
</div>
