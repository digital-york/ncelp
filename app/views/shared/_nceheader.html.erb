<% content_for(:navbar) do %>
  <div class="container image-masthead">
    <div class="background-container">
      <div class="col-xs-12 col-sm-7">
        <%= image_tag(t('ncelp.banner_image'), alt: "NCELP Resource Portal", class: 'logo-image') %>
      </div>
      <div class="col-xs-12 col-sm-5 strapline-div">
        <%= image_tag(t('ncelp.strapline_image'), alt: "Understanding, improving and promoting language learning", class: 'strapline-image') %>
      </div>
    </div>
    <span class="background-container-gradient" style="background: none;"></span>

    <div class="container site-title-container">
      <div class="site-title h1" style="text-align: center;">
        <%= render "hyrax/homepage/marketing" if controller_name == 'homepage' %>
      </div>
    </div>

    <%= render '/controls' %>
  </div>
<% end %>