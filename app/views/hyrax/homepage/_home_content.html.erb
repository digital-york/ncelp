<!-- top boxes -->
<div class="container">
  <div class="col-xs-12 col-sm-12 ncelp-homepage-middle-box">
    <h3>SEARCH</h3>
    <br/>
    Enter <b>any text</b> you wish into the search box (e.g. speaking, French, grammar)<br/>
    <br/>
    <%= render partial: 'homepage_search_form' %>
    <br/>
    Don't know what to search for? Browse "<strong>All Resources</strong>" below and use the filters to refine your search
  </div>
  <div class="col-xs-12 col-sm-12 ncelp-homepage-middle-box">
    <h3>BROWSE by</h3>
    <div class="row ncelp-homepage-browse-buttons-row">
      <div class="col-xs-6 col-sm-3 ncelp-homepage-browse-button-div">
        <div class="ncelp-homepage-browse-button">
          <%=link_to "All resources", "/catalog", target: :_blank %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-3 ncelp-homepage-browse-button-div">
        <div class="ncelp-homepage-browse-button">
          <%=link_to 'Pedagogical focus', "/catalog/facet/area_of_research_sim", target: :_blank %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-3 ncelp-homepage-browse-button-div">
        <div class="ncelp-homepage-browse-button">
          <%=link_to 'Language being learnt', "/catalog/facet/language_sim", target: :_blank %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-3 ncelp-homepage-browse-button-div">
        <div class="ncelp-homepage-browse-button">
          <%=link_to 'Target age range', "/catalog/facet/age_sim", target: :_blank %>
        </div>
      </div>
    </div>
    <div class="row ncelp-homepage-browse-buttons-row">
      <div class="col-xs-6 col-sm-3 ncelp-homepage-browse-button-div">
        <div class="ncelp-homepage-browse-button">
          <%=link_to 'Type/purpose of resource', "/catalog/facet/type_of_material_sim", target: :_blank %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-3 ncelp-homepage-browse-button-div">
        <div class="ncelp-homepage-browse-button">
          <%=link_to 'Modality/mode (skill)', "/catalog/facet/modality_sim", target: :_blank %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-3 ncelp-homepage-browse-button-div">
        <div class="ncelp-homepage-browse-button">
          <%=link_to 'Topic', "/catalog/facet/topic_sim", target: :_blank %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-3 ncelp-homepage-browse-button-div">
        <div class="ncelp-homepage-browse-button">
          <%=link_to 'Thematic/semantic field', "/catalog/facet/thematic_sim", target: :_blank %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- bottom boxes -->
<div class="container ncelp-homepage-featured-and-recent-box">
  <div class="col-xs-12 col-sm-7 ncelp-homepage-bottom-box-left">
    <h4><%= t('hyrax.homepage.featured_works.tab_label') %></h4>
    <%= render 'featured_works' %>
    <br/>
  </div>
  <div class="col-xs-12 col-sm-5 ncelp-homepage-bottom-box-right">
    <ul class="nav nav-pills" role="tablist">
      <li class="active"><a aria-expanded="true" href="#tab-col2-first" role="tab" data-toggle="tab"><%= t('hyrax.homepage.recently_uploaded.tab_label') %></a></li>
      <li class=""><a aria-expanded="false" href="#tab-col2-second" role="tab" data-toggle="tab">Explore Collections</a></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="tab-col2-first">
        <%= render 'recently_uploaded', recent_documents: @recent_documents %>
      </div>
      <div class="tab-pane" id="tab-col2-second">
        <%= render 'explore_collections', collections: @presenter.collections %>
      </div>
    </div>


  </div>
</div>

<div class="container extra-space-bottom ncelp_footer_container">
  <div class="col-sm-10" style="padding-top: 20px;">
    <%= link_to image_tag(t('ncelp.footer.education_dept_logo'), :class=>'ncelp_footer_image', alt: "Department for Education"), "https://www.york.ac.uk/education/", target: :_blank %>
  </div>
  <div class="col-sm-2">
    <%= link_to image_tag(t('ncelp.footer.uoy_logo'), :class=>'ncelp_footer_image', alt: "University of York"), "https://www.york.ac.uk/", target: :_blank %>
  </div>
</div>

