<li class="recent-item">
    <div class="row">
      <div class="col-sm-12">
        <span class="sr-only"><%= t('hyrax.homepage.recently_uploaded.document.title_label') %></span>
        <h3>
          <%= link_to [main_app, recent_document], title: recent_document.title do %>
            <%= render_thumbnail_tag(
              recent_document, 
              {
                width: 90, 
                alt: recent_document.title
              }, 
              {suppress_link: true}) + recent_document.to_s 
            %>
          <% end %>
        </h3>

        <p class="recent-field">
          <span style="color: black">
            <%= recent_document.one_line_description %>
          </span>
        </p>
      </div>
    </div>
</li>
